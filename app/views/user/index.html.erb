<h2>Listing Users</h2>

<table class="table-condensed">
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>   
      </tr>
    <% end %>
  </tbody>
</table>
<ul class="pager">
  <li class="previous"><%= link_to 'Back', posts_path %></li>
</ul>

